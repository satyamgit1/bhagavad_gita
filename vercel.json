{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/sitemap.xml", "dest": "/sitemap.xml" },
    { "src": "/sitemap-0.xml", "dest": "/sitemap-0.xml" }
  ],
  "crons": [
    {
      "path": "/api/cron",  // Path to the cron job API route
      "schedule": "15 0 * * *"  // Cron schedule for daily emails at 00:15 UTC
    }
  ],
  "env": {
    "SENDGRID_API_KEY": "@sendgrid_api_key",  
    "EMAIL_USER": "@email_user"  
  }
}
